<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>net.www-eee.util.serialization</groupId>
    <artifactId>www-eee-util-serialization-parent</artifactId>
    <version>1.1.0</version>
  </parent>

  <artifactId>www-eee-util-serialization-parser</artifactId>
  <packaging>jar</packaging>

  <name>WWW-EEE Utilities - Serialization - Parser</name>

  <properties>
    <jooq.version>3.10.5</jooq.version>
    <jool.version>0.9.13</jool.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.jooq</groupId>
      <artifactId>jool</artifactId>
      <version>${jool.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.jooq</groupId>
      <artifactId>jooq</artifactId>
      <version>${jooq.version}</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin><!-- FIXME Java 9 compat hack. -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.21.0</version>
        <configuration>
          <argLine>--add-opens=net.www_eee.util.serialization.parser/net.www_eee.util.serialization.parser.xml.soap=org.jooq</argLine>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
